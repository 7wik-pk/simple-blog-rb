<div class="container">

  <div class="row justify-content-center">
    <div class="col-10">

      <%= render 'shared/errors', obj: @user %>

      <%= form_with(model: @user, class: "shadow p-3 mb-4 bg-info rounded", local: true) do |f| %>
        <div class="form-group row mt-4">
          <div class="col-2 col-form-label text-light">
            <%= f.label :username %>
          </div>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Username" %>
          </div>
        </div>

        <div class="form-group row mt-4">
          <div class="col-2 col-form-label text-light">
            <%= f.label :email %>
          </div>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Email ID" %>
          </div>
        </div>

        <div class="form-group row mt-4">
          <div class="col-2 col-form-label text-light">
            <%= f.label :password %>
          </div>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center mt-4">
          <div class="col-2">
            <%= f.submit "Sign up", class: "btn btn-outline-light btn-lg"%>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
