
<div class="container">

  <div class="row justify-content-md-center">

    <div class="col-10 mt-4">

      <div class="card text-center shadow mb-5 bg-5 rounded">
        <div class="card-header font-italic">
          by Jane Doe
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to @article.title, article_path(@article), class: "text-success" %></h5>
          <div class="card-text text-start"><%= simple_format(@article.description) %></div>

          <%= button_to "Edit", edit_article_path(@article), method: :get, class: "btn btn-outline-info" %>
          <%= button_to "Delete", article_path(@article), method: :delete, form: {data: {turbo_confirm: "Are you sure?"}}, class: "btn btn-outline-danger" %>

        </div>
        <div class="card-footer text-body-secondary">
          <small>Created <%= time_ago_in_words(@article.created_at) %> ago,
          updated <%= time_ago_in_words(@article.updated_at) %> ago.</small>
        </div>
      </div>

    </div>

  </div>

</div>
